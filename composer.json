{
    "name": "ariaamore/website-core",
    "description": "Aria Amore - Live Opera for Weddings & Celebrations",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=7.4",
        "phpmailer/phpmailer": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "AriaAmore\\": "src/"
        },
        "files": [
            "PHPMailer/src/Exception.php",
            "PHPMailer/src/PHPMailer.php",
            "PHPMailer/src/SMTP.php"
        ]
    },
    "scripts": {
        "test": "phpunit",
        "post-install-cmd": [
            "@php -r \"if (!file_exists('.env')) { copy('.env.example', '.env'); echo 'Created .env file from .env.example\\n'; }\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
